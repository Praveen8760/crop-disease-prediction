                            <div>
                                <label for="company" class="block mb-2 text-sm font-medium text-gray-900">Potassium value</label>
                                <input step="0.01" required type="number" name="potassium" class="w-full font-Custom py-[10px] px-[8px] border-2 border-dark-light rounded-desktop-form  hover:border-dark focus:border-dark placeholder:font-Custom" placeholder="Enter Potassium Level">
                            </div>
                            <div>
                                <label for="phone" class="block mb-2 text-sm font-medium text-gray-900">Temperature</label>
                                <input step="0.01" required type="number" name="temperature" class="w-full font-Custom py-[10px] px-[8px] border-2 border-dark-light rounded-desktop-form  hover:border-dark focus:border-dark placeholder:font-Custom" placeholder="Enter Temperature">
                            </div>
                            <div>
                                <label for="phone" class="block mb-2 text-sm font-medium text-gray-900">Humidity Level</label>
